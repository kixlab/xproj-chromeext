{
  "manifest_version": 2,

  "name": "KIXLAB News Reader",
  "description": "just another toy project",
  "version": "1.0",
  "browser_action": {
    "default_title": "News Reader"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "http://34.208.245.104",
    "http://localhost:8000/oauth/*"
  ],
  "icons": {
    "16": "icon-16.png"
  },
  "background": {
    "scripts": [
      "oauth2/oauth2.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://news.naver.com/main/*"],
      "js":["jquery-3.2.1.js", "jquery-ui.js", "myscript.js"],
      "css": ["jquery-ui.css", "mystyle.css"]
    },
    {
      "matches": ["http://localhost:8000/oauth/success/*"],
      "js": ["oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "oauth2/oauth2.html"
  ]
}