{
  "manifest_version": 2,

  "name": "KIXLAB News Reader",
  "description": "End-of-article version",
  "version": "1.0",
  "browser_action": {
    "default_title": "News Reader",
    "default_icon": "icon-64.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "storage",
    "https://api.budgetwiser.org/",
    "http://localhost:8000/oauth/*"
  ],
  "icons": {
    "64": "icon-64.png",
    "400": "icon.png"
  },
  "background": {
    "scripts": [
      "oauth2/oauth2.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js":["jquery-3.2.1.js", "jquery-ui.js", "myscript.js"],
      "css": ["jquery-ui.css", "mystyle.css"]
    },
    {
      "matches": ["https://api.budgetwiser.org/oauth/success/*"],
      "js": ["oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "oauth2/oauth2.html",
    "loading.gif"
  ]
}